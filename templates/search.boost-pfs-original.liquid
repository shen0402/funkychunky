<div class="page-wrapper-search">

	<div class="page-heading-wrapper-search">
	  {% if search.performed == false %}
		<h1 class="page-heading-search">Search Our Site</h1>
		{% else %}
		{% comment %}
		<h1 class="page-heading-search">{{ 'general.search.results' | t: terms: search.terms }}</h1>
		{% endcomment %}
		<h1 class="page-heading-search">Search Results for "{{ search.terms }}"</h1>
	  {% endif %}
	</div>
  
	{% if search.performed and search.results_count == 0 %}
	  <div class="rte jc-search-empty">
		<p style="text-align:center; font-size: 20px;color: #000;">No Search Results</p>
	  </div>
	{% endif %}
  
	{% if search.performed and search.results_count > 0 %}
	  <h2 class="visually-hidden">{{ 'general.search.heading' | t: count: search.results_count }}</h2>
  
	  <div class="jc-search-page-grid-wrapper container-xl">
		<div class="product-section-flex-row product-section-flex-row-wrap">
		  {% for item in search.results %}
  
			{% if item.object_type == 'product' %}
			  {% assign product = item %}
  
			  
			  {% assign show_product = false  %}
  
			  {% comment %}
				ADVANCED PAIN RELIEF - 260790878281
				ULTIMATE SKIN CARE - 162038317129
			  {% endcomment %}
  
			  {% for collection in product.collections %}
				{% if collection.id == 260790878281 or collection.id == 162038317129 %}
				  {% assign show_product = true  %}
				{% endif %}
			  {% endfor %}
  
			  {% if show_product == true %}
				{% render 'sk-product-loop', product: product %}
			  {% endif %}
			  
  
			{% endif %}
  
  
  
		  {% endfor %}
		</div>
	  </div>
  
  
	{% endif %}
  
  
  </div>