<script>
    $(document).ready(function() {
        $(".faq-upper").on('click', 
        function() {
            
          if ($(this).siblings(".faq-expand").hasClass('hide')==true)
          {
            $(this).siblings(".faq-expand").removeClass("hide");
            $(this).children(".faq-img").addClass("rotate");
            
            
            
          }
          else
          $(this).siblings(".faq-expand").addClass("hide");
          
        });
    });

      </script>