<script>
    $(document).ready(function() {
        $(".filter-dropdown-option").on('click', 
        function() {
            
          if ($(this).siblings(".filter-options").hasClass('hide')==true)
          {
            $(this).siblings(".filter-options").removeClass("hide");
            $(this).children(".expand-icon-wrapper").addClass("rotate");
            
          }
          else
          $(this).siblings(".filter-options").addClass("hide");
          $(this).children(".expand-icon-wrapper").removeClass("rotate");
        });
    });

      </script>