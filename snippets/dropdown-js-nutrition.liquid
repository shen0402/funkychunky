<script>
    $(document).ready(function() {
        $(".nutrition-dropdown-toggle").on('click', 
        function() {
            
          if ($(this).siblings(".nutrition-information-extend").hasClass('hide')==true)
          {
            $(this).siblings(".nutrition-information-extend").removeClass("hide");
            
            
          }
          else
          $(this).siblings(".nutrition-information-extend").addClass("hide");
          
        });
    });

      </script>