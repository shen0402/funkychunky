<div class="home-hero-section">
    <div class="home-hero-back"
      
      {%if section.settings.hero_image%}   
      style="background-image: url('{{section.settings.hero_image | image_url }}');"
      {% endif %}
  >



    {% if section.settings.hero_image %}
      <style type="text/css">
        .home-hero-back {
          background-image: url({{section.settings.hero_image | image_url }});
        }
      </style>
    {% endif %}
    
    {% if section.settings.mobile_bg_image %}
      <style type="text/css">
        @media screen and (max-width: 479px) { 
    
         .home-hero-back {
          background-image: url({{section.settings.mobile_bg_image | image_url }}) !important;
         }
    
        }
      </style>
    {% endif %}



      <div class="hero-content-wrapper">
  <h1 class="home-heading" {% if section.settings.main_heading_color %}style="color: {{section.settings.main_heading_color}};"{% endif %}>{{section.settings.main_heading}}</h1>
        <h3 class="home-subheading" {% if section.settings.sub_heading_color %}style="color: {{section.settings.sub_heading_color}};"{% endif %}>{{section.settings.sub_heading}}</h3>
        <a href="{{section.settings.btn_url}}" class="general-btn margin-t w-button solid-white" 
      {% if section.settings.btn_bg_color or section.settings.btn_text_color %}style="background-color: {{section.settings.btn_bg_color}}; color: {{section.settings.btn_text_color}};"{% endif %}
      >{{section.settings.btn_text}}</a>
      </div>
    </div>
    

    
    {% comment %}
    <div class="hero-img-cover"><img src="https://cdn.shopify.com/s/files/1/0007/4524/2681/files/splash-home-hero.svg" loading="lazy" alt="" class="img-hero"></div>
    <div class="shopping-for-gift-section"></div>
    {% endcomment %}


    <div class="white-bg-rounded">

      <div class="product-row-section">
        <div id="best-sellers" class="product-row-container-category">
          <div class="general-sub-hero-heading-wrapper">
            <h5 class="bright-blue-text">just keep snackin&#x27;<span class="break-line"></span></h5>
            <h1 class="black-text">{{section.settings.section_heading}}<span class="break-line"></span></h1>
          </div>
      
          {% assign product_limit = section.settings.product_limit %}
          {% assign jc_slide_inner_class = '' %}
          {% assign jc_slider_class = '' %}
      
          {% if product_limit <= 4 %}
            {% assign jc_hide_class = 'product-slider-arrow-category-page-hide' %}
            {% assign jc_slide_inner_class = 'product-slide-inner-category-page-single' %}
            {% assign jc_slider_class = 'product-slider-category-page-single' %}
          {% endif %}
      
      
          <div class="category-page-product-slider-wrapper">
            <div data-animation="slide" data-duration="500" data-infinite="1" class="product-slider-category-page {{jc_slider_class}} w-slider">
              <div class="w-slider-mask">
      
      
                {% for block in section.blocks %}
                  {% assign product = all_products[block.settings.title]  %}
                  {%- assign current_variant = product.selected_or_first_available_variant -%}
                  {%- assign compare_at_price = current_variant.compare_at_price -%}
                  {%- assign price = current_variant.price -%}
      
                  {% if forloop.index == 1 or 
                    forloop.index == 5 or 
                    forloop.index == 9 or
                    forloop.index == 13
                    %}
      
                      <div class="w-slide">
                        <div class="product-slide-inner-category-page {{jc_slide_inner_class}}">
                          <div class="product-section-row">
      
                    {% endif %}
      
      
                      <div class="product-section-col">
                        <div class="product-section-col-inner product-section-col-inner-category">
                            <div class="product-section-img-wrapper">
                                <a href="{{ product.url }}" class="product-section-img-link w-inline-block">
                                  <img src="{{ product.featured_image | img_url: '800x' }}" class="product-section-img" alt="{{ product.title | escape }}">
                                </a>
                              </div>
                            <div id="w-node-_2c453dd0-c9ca-8595-de3c-3a5b7b5c5cc5-dd266cfc" class="shop-name-inner">
                              <h2 class="black-text no-margin-b no-margin-t">
                                <a href="{{ product.url }}" class="black-bright-blue-link">{{ product.title }}</a><span class="break-line"></span>
                              </h2>
        
                              {% comment %}
                              {% if product.metafields.product_info.collection_description %}
                                <p class="black-text white smaller">{{ product.metafields.product_info.collection_description }}</p>
                              {% endif %}
                              {% endcomment %}
                      

                            <p class="black-text center">{{ product.price | money }}</p>
                          </div>

                          
                          <div class="product-section-btn-wrapper">
                            <a href="{{ product.url}}" class="general-btn dark-with-w-text margin-t-larger w-button">Shop Now<span class="visually-hidden"> {{ product.title }}</span></a>
                          </div>
                        </div>
                      </div>
      
                    {% if forloop.index == 4 or 
                      forloop.index == 8 or 
                      forloop.index == 12 or
                      forloop.index == 16 or
                      forloop.last == true 
                      %}
                        </div>
                      </div>
                    </div>
                      {% endif %}
      
                {% endfor %}

              </div>
      
              <div class="product-slider-arrow-category-page {{jc_hide_class}} w-slider-arrow-left">
                <div class="w-icon-slider-left"></div>
              </div>
              <div class="product-slider-arrow-category-page {{jc_hide_class}} w-slider-arrow-right">
                <div class="w-icon-slider-right"></div>
              </div>
              <div class="product-slide-nav-category-page w-slider-nav w-round"></div>
      
            </div>
          </div>

      
        </div>
      </div>
    </div>
       

       

      {% comment %}
