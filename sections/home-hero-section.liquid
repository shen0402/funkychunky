  {% schema %}
  {
    "name": "Hero section/Product Row",
    "max_blocks": 16,
    "settings": [
      {
          "type": "text",
          "id": "sub_heading",
          "default": "Elevate Your Gift Game",
          "label": "Hero Sub Heading"
      },
      {
          "type": "color",
          "id": "sub_heading_color",
          "label": "Sub Heading Color"
      },
      {
          "type": "text",
          "id": "main_heading",
          "default": "SPOOKY GOURMET TREATS",
          "label": "Hero Main Heading"
      },
      {
          "type": "color",
          "id": "main_heading_color",
          "default": "#fff",
          "label": "Hero Main Heading Color"
      },
      {
        "type": "text",
        "id": "btn_text",
        "default": "TRICK YOUR TREAT",
        "label": "Button Text"
      },
      {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
      },
      {
          "type": "color",
          "id": "btn_bg_color",
          "default": "#fff",
          "label": "Button Background Color"
        
      },
      {
          "type": "color",
          "id": "btn_text_color",
          "default": "#000",
          "label": "Button Text Color"
      },
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_bg_image",
          "label": "Mobile Hero Image"
          },
        {
           "type": "text",
           "id": "section_heading",
           "default": "Our Best Sellers",
           "label": "Product Section Heading"
        },
        {
             "type": "range",
             "id": "product_limit",
             "label": "How many products to show?",
             "min": 1,
             "max": 16,
             "step": 1,
             "default": 4
          }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Product",
        "settings": [
          
          {
           "type": "product",
           "id": "title",
           "label": "Product"
          }
  
        ]
      }
    ]
  }
  {% endschema %}