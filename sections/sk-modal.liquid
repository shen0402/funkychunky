<script type="text/javascript">
      $(document).ready(function() {

        if (!$.cookie('sk_newsletter_funky_chunky')) {
          setTimeout(function() {
            $('.sign-up-and-save').fadeIn(500);
            $('body').css('overflow', 'hidden');
            var date = new Date();
            date.setTime(date.getTime() + 7776000000);
            $.cookie('sk_newsletter_funky_chunky', true, {
              expires: date
            });
            setTimeout(() => {
              trapFocus('.sign-up-and-save-wrapper');
            }, 600)
            
          }, 70);
          
        }
